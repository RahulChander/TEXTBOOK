# 6

wn = turtle.Screen()
abc = turtle.Turtle()

for i in range(0,3):
    abc.forward(100)
    abc.left(120)

for i in range(0,4):
    abc.forward(100)
    abc.left(90)

for i in range(0,6):
    abc.forward(100)
    abc.left(60)

for i in range(0,8):
    abc.forward(100)
    abc.left(45)

wn.mainloop()

# 7

wn = turtle.Screen()
pirate = turtle.Turtle()

Array = [160, -43, 270, -97, -43, 200, -940, 17, -86]

direction = 0
for w in Array:
    direction = direction + w
    pirate.left(w)
    pirate.forward(100)

wn.mainloop()

#8
a = str(direction % 360)
print (a)


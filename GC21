#10
import turtle # Set up the Turtle
wn = turtle.Screen() #Set up the screen
tess = turtle.Turtle() # Define the actual turtle
tess.right(90) # Turn right 90 degrees
tess.left(3600) # No change
tess.right(-90) # Turn left 90 degrees
tess.speed(10) # Set a new turtle speed
tess.left(3600) # No change
tess.speed(0) # Make it stop
tess.left(3645) # Turn left 45 degrees
tess.forward(-100) # Go backwards 100 steps

#11

import turtle
wn = turtle.Screen()
Turt = turtle.Turtle()

Turt.hideturtle()

for i in range(0,5):
    Turt.forward(200)
    Turt.right(324)

wn.mainloop()

#12

import turtle
wn = turtle.Screen()
Nic = turtle.Turtle()

wn.bgcolor("white")
Nic.color("blue")
Nic.shape("turtle")
Nic.width("45")
Nic.stamp()

for i in range(0,12):
    Nic.penup()
    Nic.forward(160)
    Nic.pendown()
    Nic.forward(20)
    Nic.penup()
    Nic.forward(20)
    Nic.stamp()
    Nic.backward(200)
    Nic.right(30)

wn.mainloop()

#13

a = (type(Nic))
print (a)

